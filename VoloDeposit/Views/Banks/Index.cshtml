@model IEnumerable<VoloDeposit.ViewModel.BankViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>List of Banks</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <a href="@Url.Action("PasportCheck", "Depositors",new { Id=item.Id},null)" class="btn btn-warning">
                Select
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            </a>
        </td>  
    </tr>
}

</table>
