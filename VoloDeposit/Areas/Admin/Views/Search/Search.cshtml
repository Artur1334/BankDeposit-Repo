        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </div>
    </div>


    <div id="results"></div>

    @section Scripts {

        @Scripts.Render("~/bundles/jqueryval")
